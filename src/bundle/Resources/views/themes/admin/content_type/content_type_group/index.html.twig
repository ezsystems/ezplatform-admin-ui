{% extends "@ezdesign/ui/layout.html.twig" %}

{% trans_default_domain 'content_type' %}

{% block body_class %}ez-content-type-group-list-view ez-has-full-width-footer{% endblock %}
{% block side_column %}{% endblock %}

{% block breadcrumbs %}
    {% include '@ezdesign/ui/breadcrumbs.html.twig' with { items: [
        { value: 'breadcrumb.admin'|trans(domain='messages')|desc('Admin') },
        { url: path('ezplatform.content_type_group.list'), value: 'content_type_group.breadcrumb.list'|trans|desc('Content Types') },
        { value: 'content_type_group.breadcrumb.view'|trans({ '%identifier%': content_type_group.identifier })|desc('%identifier%') }
    ]} %}
{% endblock %}

{% block header %}
    {% include '@ezdesign/ui/page_title.html.twig' with {
        title: 'content_type_group.view.view.title'|trans({ '%identifier%': content_type_group.identifier })|desc('%identifier%'),
        icon_name: 'content-type'
    } %}
{% endblock %}

{% block content %}
    {{ render(controller('EzSystems\\EzPlatformAdminUiBundle\\Controller\\ContentTypeController::listAction', {
        contentTypeGroupId: content_type_group.id,
        page: page,
        routeName: route_name
    })) }}
{% endblock %}
