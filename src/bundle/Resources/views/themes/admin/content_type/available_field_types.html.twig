<div class="ibexa-field-types-available">
    <h3 class="ibexa-field-types-available__header">{{ 'content_type.view.edit.content_field_types'|trans|desc('Field types') }}</h3>
    <div class="ibexa-field-types-available__search-container">
        <input type="text" class="form-control ibexa-field-types-available__search" />
    </div>
    <ul class="ibexa-field-types-available__fields">
        {% for item in field_type_toolbar %}
            <li class="ibexa-field-types-available__field" draggable="true" data-item-identifier="{{ item.identifier }}">
                <svg class="ibexa-icon ibexa-icon--small ibexa-field-types-available__field-drag-icon">
                    <use xlink:href="{{ ibexa_icon_path('drag') }}"></use>
                </svg>
                <svg class="ibexa-icon ibexa-icon--small ibexa-field-types-available__field-icon">
                    <use xlink:href="{{ ibexa_icon_path('dropdown') }}"></use>
                </svg>
                <div class="ibexa-field-types-available__field-name ibexa-label ibexa-label--medium">{{ item.name }}</div>
            </li>
        {% endfor %}
    </ul>
</div>
