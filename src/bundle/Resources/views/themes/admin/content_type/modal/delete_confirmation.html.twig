{% trans_default_domain 'content_type' %}

<div class="modal fade ez-modal ez-modal--no-header ez-modal--send-to-trash" id="delete-content-type-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <svg class="ez-icon ez-icon--medium" aria-hidden="true">
                    <use xlink:href="{{ ez_icon_path('discard') }}"></use>
                </svg>
            </button>
            <div class="modal-body">
                <p class="ez-modal-body__main">{{ 'content_type.field_definitions.modal.message'|trans|desc('Do you want to delete the selected Field definition(s)?') }}</p>
            </div>
            <div class="modal-footer">
                {{ form_widget(form.removeFieldDefinition, { attr: { class: 'btn ibexa-btn ibexa-btn--primary'}, label: 'modal.delete'|trans|desc('Delete')}) }}
                <button type="button" class="btn ibexa-btn ibexa-btn--secondary" data-dismiss="modal">{{ 'modal.cancel'|trans|desc('Cancel') }}</button>
            </div>
        </div>
    </div>
</div>
