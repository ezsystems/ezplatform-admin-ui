{% trans_default_domain 'content_type' %}

{% macro content_type_edit(content_type, content_type_group, class_name) %}
    {% set edit_url = path('ezplatform.content_type.edit', {
    'contentTypeGroupId': content_type_group.id,
    'contentTypeId': content_type.id
    }) %}

    <a title="{{ 'content_type.action.edit'|trans|desc('Edit') }}"
       href="{{ edit_url }}"
        {% if class_name %}class="{{ class_name }}"{% endif %}>
        <svg class="ez-icon ez-icon-edit">
            <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#edit"></use>
        </svg>
    </a>
{% endmacro %}

{% macro content_type_copy(content_type, content_type_group, class_name) %}
    <button
        title="{{ 'content_type.action.copy'|trans|desc('Copy') }}"
        type="button"
        data-content-type-id="{{ content_type.id }}"
        data-content-type-identifier="{{ content_type.identifier }}"
        data-content-type-group-id="{{ content_type_group.id }}"
        {% if class_name %}class="{{ class_name }}"{% endif %}>
        <svg class="ez-icon ez-icon-copy">
            <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#copy"></use>
        </svg>
    </button>
{% endmacro %}
