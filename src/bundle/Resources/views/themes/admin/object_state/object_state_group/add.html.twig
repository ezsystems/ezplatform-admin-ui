{% extends "@ezdesign/object_state/object_state_group/base.html.twig" %}

{% form_theme form '@ezdesign/ui/form_fields.html.twig'  %}

{% trans_default_domain 'object_state' %}

{% block breadcrumbs_admin %}
    {% include '@ezdesign/ui/breadcrumbs.html.twig' with { items: [
        { value: 'breadcrumb.admin'|trans(domain='messages')|desc('Admin') },
        { url: path('ezplatform.object_state.groups.list'), value: 'object_state_group.breadcrumb.list'|trans|desc('Object states') },
        { value: 'object_state_group.breadcrumb.add'|trans|desc('Creating a new Object state group') }
    ]} %}
{% endblock %}

{% block context_menu_admin %}
    {% set object_state_group_create_sidebar_right = knp_menu_get('ezplatform_admin_ui.menu.object_state_group_create.sidebar_right') %}
    {{ knp_menu_render(object_state_group_create_sidebar_right, {'template': '@ezdesign/ui/menu/context_menu.html.twig'}) }}
{% endblock %}

{% block header_admin %}
    {% include '@ezdesign/ui/page_title.html.twig' with {
        title: 'object_state_group.view.add.title'|trans|desc('Creating a new Object state group'),
    } %}
{% endblock %}

{% block form %}
    {{ form_start(form) }}

    <section class="container">
        <div class="card ibexa-card ibexa-card--light">
            <div class="card-body">
                {{ form_row(form.name, {'attr': {'autofocus': 'autofocus'}}) }}
                {{ form_row(form.identifier) }}
            </div>
        </div>
    </section>

    {{ form_widget(form.create, { 'attr': { 'hidden': 'hidden' } }) }}

    {{ form_end(form) }}
{% endblock %}
