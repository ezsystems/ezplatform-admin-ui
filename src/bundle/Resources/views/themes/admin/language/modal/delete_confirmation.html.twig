{% trans_default_domain 'language' %}

<div class="modal fade ez-modal ez-modal--no-header ez-modal--send-to-trash" id="delete-language-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <svg class="ez-icon ez-icon--medium" aria-hidden="true">
                    <use xlink:href="{{ ez_icon_path('discard') }}"></use>
                </svg>
            </button>
            <div class="modal-body">
                <p>{{ 'language.modal.message'|trans|desc('Do you want to delete the language(s)?') }}</p>
            </div>
            <div class="modal-footer">
                {{ form_widget(deleteForm.delete, { 'attr': {'class': 'btn ibexa-btn ibexa-btn--primary'} }) }}
                <button type="button" class="btn ibexa-btn ibexa-btn--secondary" data-dismiss="modal">{{ 'language.form.cancel'|trans|desc('Cancel') }}</button>
            </div>
        </div>
    </div>
</div>
