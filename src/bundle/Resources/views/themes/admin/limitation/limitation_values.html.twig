        {{ value.name }}{% if not loop.last %},{% else %}{% endif %}
    {% endfor %}
{% endapply %}
{% endblock %}

{% block ez_limitation_node_value %}
{% apply spaceless %}
    {% for path in values %}
        {% for value in path %}/{{ value.name }}{% endfor %}
        {% if not loop.last %}, {% endif %}
    {% endfor %}
{% endapply %}
{% endblock %}

