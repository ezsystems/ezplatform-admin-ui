{% trans_default_domain 'user_delete' %}

{% form_theme form '@ezdesign/ui/form_fields.html.twig' %}

<div class="modal fade ez-modal ez-modal--no-header ez-modal--send-to-trash" id="delete-user-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <svg class="ez-icon ez-icon--medium" aria-hidden="true">
                    <use xlink:href="{{ ez_icon_path('discard') }}"></use>
                </svg>
            </button>
            <div class="modal-body">
                <p class="ez-modal-body__main">
                    {{ 'delete.modal.message'|trans|desc('Are you sure you want to delete this User?') }}
                </p>
            </div>
            <div class="modal-footer">
                {{ form_start(form, {'action': path('ezplatform.user.delete')}) }}
                {{ form_widget(form.delete, {'attr': {'class': 'btn ibexa-btn ibexa-btn--primary'}}) }}
                <button type="button" class="btn ibexa-btn ibexa-btn--secondary" data-dismiss="modal">
                    {{ 'delete.form.cancel'|trans|desc('Cancel') }}
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
