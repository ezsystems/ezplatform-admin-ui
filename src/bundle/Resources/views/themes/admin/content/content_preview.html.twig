{% extends ezpublish.configResolver.parameter('pagelayout', 'ez_platform_admin_ui') %}

{% trans_default_domain 'content_preview' %}

{% block body_class %}ez-content-preview{% endblock %}

{% block navigation %}{% endblock %}

{% block content %}
<div class="ez-preview">
    <div class="ez-preview__nav">
        <div class="ez-preview__item ez-preview__item--back">
            <a href="{{ url('ez_content_draft_edit', {'contentId': content.id, 'versionNo': content.versionInfo.versionNo, 'language': language_code}) }}" class="">
                <svg class="ez-icon ez-icon-back">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#caret-back"></use>
                </svg>
            </a>
            <span>{{ 'preview'|trans|desc('Preview') }}</span>
        </div>
        <div class="ez-preview__item ez-preview__item--actions">
            <button data-preview-mode="desktop" class="ez-preview__action ez-preview__action--selected">
                <svg class="ez-icon ez-icon-desktop">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#view-desktop"></use>
                </svg>
            </button>
            <button data-preview-mode="tablet" class="ez-preview__action">
                <svg class="ez-icon ez-icon-tablet">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#view-tablet"></use>
                </svg>
            </button>
            <button data-preview-mode="mobile" class="ez-preview__action">
                <svg class="ez-icon ez-icon-mobile">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#view-mobile"></use>
                </svg>
            </button>
        </div>
        <div class="ez-preview__item ez-preview__item--description">
            <span class="ez-preview__item-text">{{ content.name }}</span>
        </div>
    </div>
    <div class="ez-preview__iframe ez-preview__iframe--desktop">
        <iframe src="{{ url('_ezpublishPreviewContent', {'contentId': content.id, 'versionNo': content.versionInfo.versionNo, 'language': language_code, 'siteAccessName': siteaccess}) }}" frameborder="0"></iframe>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {%  javascripts
        'bundles/ezplatformadminui/js/scripts/admin.preview.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
