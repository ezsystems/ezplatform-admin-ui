{% extends 'form_div_layout.html.twig' %}

{% block radio_widget %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' ez-translation__input')|trim}) %}
    <div class="radio ez-translation__input-wrapper">
        <label class="ez-translation__label">
            {{ parent() }}
            <svg class="ez-icon">
                <use xlink:href="{{ ez_icon_path('checkmark') }}"></use>
            </svg>
            {{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}
        </label>
    </div>
{% endblock %}
