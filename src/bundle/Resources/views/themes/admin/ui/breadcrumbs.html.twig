{% if items is defined %}
    <ol class="breadcrumb px-4">
        {% for item in items %}
            <li class="breadcrumb-item{% if loop.last %} active{% endif %}" title="{{ item.value }}">
                {% if not loop.last and item.url is defined %}
                    <a href="{{ item.url }}">{{ item.value }}</a>
                {% else %}
                    {{ item.value }}
                {% endif %}
            </li>
        {% endfor %}
    </ol>
{% endif %}
