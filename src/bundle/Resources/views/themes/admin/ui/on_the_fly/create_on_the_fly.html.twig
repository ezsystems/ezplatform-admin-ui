{% extends '@ezdesign/content/edit/base.html.twig' %}

{% trans_default_domain 'content_create' %}

{% block meta %}
    <meta name="LanguageCode" content="{{ language.languageCode }}" />
{% endblock %}

{% block page_title %}
    {% include '@ezdesign/ui/breadcrumbs.html.twig' with { 
        class: 'breadcrumb--create-on-the-fly',
        items: [
            { value: 'Structure > Admin / Content types / Content / all TO DO' }
        ] 
    } %}

    {% include '@ezdesign/content/page_title_edit.html.twig' with { 
        class: 'ez-content-edit-page-title--create-on-the-fly',
        action_name: 'creating'|trans|desc('Creating'),
        title: 'new_content_item'|trans({'%contentType%': content_type.name})|desc('New %contentType%'),
        description: content_type.description
    } %}
{% endblock %}

{% block details %}{% endblock %}

{% block form_fields %}
    <section class="container ez-container">
        <div class="card ez-card ez-card--light">
            <div class="card-body">
                {{ parent() }}
            </div>
        </div>
    </section>
{% endblock %}

{% block right_sidebar_wrapper %}{% endblock %}

{% block form_before %}
    {{ ez_render_component_group('content-create-form-before', {
        'parent_location': parent_location,
        'content_type': content_type,
        'language': language
    }) }}
{% endblock %}

{% block form_after %}
    {{ ez_render_component_group('content-create-form-after', {
        'parent_location': parent_location,
        'content_type': content_type,
        'language': language
    }) }}
{% endblock %}
