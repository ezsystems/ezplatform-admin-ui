<tr class="ibexa-table__head-row">
    {% block cells %}
        {% for head_col in head_cols %}
            {% include '@ezdesign/ui/component/table/table_head_cell.html.twig' with {
                has_checkbox: head_col.has_checkbox|default(false),
                has_icon: head_col.has_icon|default(false),
                is_close_left: head_col.is_close_left is defined ? head_col.is_close_left : next_is_close_left|default(false),
                content: head_col.content|default(''),
                sort_column: head_col.sort_column|default(null),
                class: head_col.class|default(null),
                attr: head_col.attr|default({}),
                wrapper_attr: head_col.wrapper_attr|default({}),
            } %}
            {% set next_is_close_left = head_col.has_checkbox|default(false) or head_col.has_icon|default(false) %}
        {% endfor %}
    {% endblock %}
</tr>
