<div class="ibexa-collapse {{ is_hidden|default(false) ? 'ibexa-collapse--hidden' }} {{ container_class|default('') }}">
    {% block header %}
        <div class="ibexa-collapse__header {{ header_class|default('') }}">
            {% block header_content %}
                {% if isDragable|default(false) %}
                {% endif %}
                
                <button 
                    class="ibexa-collapse__toggle {{ not is_expand|default(false) ? 'collapsed' }} {{ button_class|default('') }}" 
                    type="button"
                    data-toggle="collapse" 
                    data-target="#{{ id }}" 
                >
                    <h2 class="ibexa-collapse__header-label">{{ header_label|default('') }}</h2>
                </button>
                
                {% if extra_actions is defined %}
                    {% for action in extra_actions %}
                        <button class="ibexa-collapse__extra-action-button btn ibexa-btn ibexa-btn--no-text ibexa-btn--ghost {{ action.button_class|default('') }}">
                            <svg class="ibexa-icon ibexa-icon--small ibexa-icon--edit">
                                <use xlink:href="{{ ibexa_icon_path(action.icon_name) }}"></use>
                            </svg>
                        </button>
                    {% endfor %}
                {% endif %}

                <button 
                    class="ibexa-collapse__toggle ibexa-collapse__toggle--status"
                    type="button"
                    data-toggle="collapse" 
                    data-target="#{{ id }}" 
                >
                    <svg class="ibexa-icon ibexa-icon--small ibexa-collapse__toggle-status-icon {{ status_icon_class|default('') }}">
                        <use xlink:href="{{ ibexa_icon_path(status_icon|default('caret-down')) }}"></use>
                    </svg>
                </button>
            {% endblock %}
        </div>
    {% endblock %}

    {% block body %}
        <div class="ibexa-collapse__body collapse {{ is_expand|default(false) ? 'show' }} {{ body_class|default('') }}" id="{{ id }}">
            {% block body_content %}{% endblock %}
        </div>
    {% endblock %}
</div>