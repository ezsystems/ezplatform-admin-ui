{% set tabs_to_show = tabs|map((tab, index) => {
    id: group ~ '-' ~ tab.identifier,
    label: tab.name,
    content: tab.view,
    active: index == 0,
    tab_pane_class: tab.identifier == 'content' ? 'ibexa-tab-content__pane--no-padding'
}) %}
{% include '@ezdesign/ui/component/tab/tabs.html.twig' with { 
    tabs: tabs_to_show,
    include_tab_more: true,
} %}
