<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>eZ Platform</title>
        {{ encore_entry_link_tags('ezplatform-admin-ui-security-base-css', null, 'ezplatform') }}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/ezplatformadminui/img/favicon.ico') }}" />
    </head>
    <body class="ez-login-view">
        <div class="container-fluid ez-main-container">
            <div class="row ez-login">
                <div class="col-5 ez-login__image-col">
                    <div class="ez-login__support-wrapper">
                        <h2 class="ez-login__support-headline">{{ 'base.need_assistance'|trans|desc('Need assistance or support?') }}</h2>
                        <span class="ez-login__support-content">{{ 'base.visit_support'|trans({
                                '%ez_forum_link%': '<a class="ez-link ez-link--light" href="http://ibexa.co/support">http://ibexa.co/support</a>',
                                '%ez_contact_link%': '<a class="ez-link ez-link--light" href="http://ibexa.co/contact_us">http://ibexa.co/contact_us</a>'
                              })| desc('Visit our support forums at %ez_forum_link%<br/>or our official channels found at %ez_contact_link%')|raw }}</span>
                    </div>
                    <div class="ez-login__application-version">Version 3.2</div>
                </div>
                <div class="col-7 ez-login__actions-col">
                    <img class="ez-login__logo" src="{{ asset('/bundles/ezplatformadminui/img/ibexa-logo.svg') }}" alt="ibexa" />
                    <div class="ez-login__actions-wrapper">
                        {%- block content -%} {%- endblock content -%}
                    </div>
                    <div class="ez-login__copright">
                        {{ 'base.footer_copyright'|trans({
                                    '%current_year%': "now"|date("Y")
                        }) |desc('Copyright &#169; IBEXA 1999-%current_year%')|raw }}
                    </div>
                </div>
            </div>
        </div>

        <script src="{{ asset('bundles/ezplatformadminuiassets/vendors/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('bundles/ezplatformadminuiassets/vendors/popper.js/dist/umd/popper.min.js') }}"></script>
        <script src="{{ asset('bundles/ezplatformadminuiassets/vendors/bootstrap/dist/js/bootstrap.min.js') }}"></script>

        {% if app.request.locale == 'ach_UG' %}
            <script type="text/javascript">
                var _jipt = [];
                _jipt.push(['project', 'ezplatform']);
            </script>
            <script type="text/javascript" src="//cdn.crowdin.com/jipt/jipt.js"></script>
        {% endif %}
    </body>
</html>
