{% trans_default_domain 'locationview' %}

<div class="ez-add-to-bookmarks {{ location_is_bookmarked ? 'ez-add-to-bookmarks--checked'}}" data-location-id="{{ location.id }}">
    <button
        type="button"
        class="ez-add-to-bookmarks__icon-wrapper ez-add-to-bookmarks__icon-wrapper--add btn btn-icon"
        title="{{ 'location.bookmark.add'|trans|desc('Add to Bookmarks') }}">
        <svg class="ez-icon ez-icon--secondary">
            <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#bookmark"></use>
        </svg>
    </button>
    <button
        type="button"
        class="ez-add-to-bookmarks__icon-wrapper ez-add-to-bookmarks__icon-wrapper--remove btn btn-icon"
        title="{{ 'location.bookmark.remove'|trans|desc('Remove from Bookmarks') }}">
        <svg class="ez-icon ez-icon--secondary">
            <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#bookmark-active"></use>
        </svg>
    </button>
</div>
