{% block ezplatform_fieldtype_ezdate_widget %}
    <div class="ez-data-source__input-wrapper">
        <input type="text" class="flatpickr flatpickr-input ez-data-source__input form-control" readonly="readonly">
        <button type="button" class="ez-data-source__btn--clear-input">
            <svg class="ez-icon">
                <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#circle-close"></use>
            </svg>
        </button>
    </div>
    {% set offset =  form.parent.vars.value.value.date|length ? form.parent.vars.value.value.date.offset : null %}
    {% set attr = attr|merge({'class': 'ez-data-source__input', 'hidden': 'hidden',
        'data-timezone-offset': offset}) %}
    {{ block('form_widget') }}
{% endblock %}
