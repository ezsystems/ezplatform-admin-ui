{% trans_default_domain 'notifications' %}

<table
    data-notifications="{{ path('ezplatform.notifications.render') }}"
    data-notifications-count="{{ path('ezplatform.notifications.count') }}"
    class="table n-table--notifications">
    <thead>
    <tr>
        <th>{{ 'notification.type'|trans|desc('Type') }}</th>
        <th>{{ 'notification.description'|trans|desc('Description') }}</th>
        <th>{{ 'notification.date'|trans|desc('Date') }}</th>
    </tr>
    </thead>
    <tbody class="n-table__body">
    {% if pager.count is same as(0) %}
        <tr>
            <td colspan="4">
                <span class="ez-table-no-content mb-0 py-1 pl-0">
                    {{ 'bookmark.list.empty'|trans|desc('The notification list is empty.') }}
                </span>
            </td>
        </tr>
    {% else %}
        {{ notifications|raw }}
    {% endif %}
    </tbody>

</table>
{% if pager.haveToPaginate %}
    {{ pagination|raw }}
{% endif %}