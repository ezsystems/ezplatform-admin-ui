{% extends "@EzPlatformAdminUi/layout.html.twig" %}

{% trans_default_domain 'role' %}

{% block breadcrumbs %}
    {% include '@EzPlatformAdminUi/parts/breadcrumbs.html.twig' with { items: [
        { value: 'breadcrumb.admin'|trans(domain='messages')|desc('Admin') },
        { url: path('ezplatform.role.list'), value: 'role.breadcrumb.list'|trans|desc('Roles') },
        { value: 'role.breadcrumb.add'|trans|desc('Creating a new Role') }
    ]} %}
{% endblock %}

{% block pageTitle %}
    {% include '@EzPlatformAdminUi/parts/page_title.html.twig' with {
        title: 'role.view.add.title'|trans|desc('Creating a new Role'),
        iconName: 'roles'
    } %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <section class="container mt-4">
        <div class="card">
            <div class="card-body">
                {{ form_row(form.identifier) }}
            </div>
        </div>
    </section>

    <section class="container mt-4 mb-4">
        <div class="btn-toolbar justify-content-end" role="toolbar" >
            <a href="{{ path("ezplatform.role.list") }}" class="btn btn-default">
                {{ "form.cancel"|trans|desc('Cancel') }}
            </a>
            {{ form_widget(form.save, { 'attr': { 'class': 'btn btn-primary' } }) }}
        </div>
    </section>
    {{ form_end(form) }}
{% endblock %}
